{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2021"
    },
    "exclude": ["**/*.test.ts", "**/*.stub.ts", "node_modules", "dist"],
    "include": ["./src/**/*"]
}
